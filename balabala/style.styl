*
    margin 0
    padding 0

html,body 
    width 100%

a 
    text-decoration none

.none
    display none 
.active
    display block 

.headtop
    background #ffc734
    height 64px
    position relative
    .logo
        // background-image url('/images/logo.png') no-repeat center
        position absolute
        top 50%
        left 50%
        transform translate(-50%,-50%)
    .search
        position absolute
        top 20px
        right 100px
        width 113px
        height 19px
        padding 1px 
        background-image url('/images/search.png')
        .text
            width 110px
            height 13px
            padding-top 6px
            background none
            border 0 none
            text-indent 10px
            font-style 100%            
        .search-btn
            position absolute
            width 30px
            height 19px
            top 0
            right 0
            border 0 none
            background none
            cursor pointer
    .en
        position absolute
        top 20px
        right 50px    
.nav
    height 40px
    background #372d2a    
    .nav-lists
        text-align center
        list-style none
        .list
            position relative
            display inline-block
            margin-left 30px
            line-height 40px
            .list1
                font-size 16px
                color #959393
            .list1-child
                // display none
                position absolute
                width 505px
                margin-top 0px
                margin-left -175px
                padding-top 10px
                background #ffffff
                opacity 0.8
                .left-text
                    position relative
                    float left
                    width 234px
                    margin-left 50px 
                    dl
                        width 117px
                        float left
                        text-align left
                        min-height 114px
                        margin-top 1em
                        margin-bottom 1em
                        dt
                            display block 
                            line-height 30px
                            font-size 14px
                            font-weight bold 
                            color #3e3a39
                        dd 
                            line-height 20px
                            font-size 12px
                            color #595757
                .right-img
                    float right                    
                    width 190px
                    position relative
                    margin-top 30px
                    margin-right 30px
                   
            

                        
            