$hdbg_color = #e54847
$font_color_block = #ffffff
$bg_color = #e5e5e5
html,body
    width 100%
.flex
    display flex
.flex1
    flex 1
.section-title
    font-size 17px
    color #000
.action-list.section-title
    padding-left 0.4rem
.nav
    height 1.067rem
    font-size 18px
    text-align center
    background-color $hdbg_color
    padding 6px
    box-sizing border-box
    .arrow-left
        float left
        height 100%
        position relative
        &:after
            content ''
            height 12px
            width 12px
            position absolute
            top 50%
            left 16px
            border 2px solid #ffffff
            border-width 0 0 2px 2px
            transform translateY(-50%) rotate(45deg)
    span 
        color $font_color_block
        display inline-block

.page
    background #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555555
    min-width 3.1rem
    -webkit-tap-highlight-color rgba(255,255,255,0)
    font 14px/1.5 Arial,Helvetica,sans-serif
    section 
        background #fff
        border-bottom 0.3rem
        border-top 1px solid $bg_color
    .movie-header
        padding 0
        background #f8f8f8
        border-bottom none
        .movie
            color #ffffff
            padding 0.4rem
            line-height 1
            position relative
            box-sizing border-box
            filter blur(0)
            &-background,
            &-filter
                position absolute
                top 0
                left 0
                right 0
                bottom 0
            &-background
                z-index 0
                filter blur(0.6rem)
                -webkit-filter blur(0.6rem)
                background-image url(./images/header-bg.jpg)
                background-size cover
                background-repeat no-repeat
                background-position-y 40%
            &-filter
                background-color #40454d
                opacity 0.5
            &-container
                z-index 1
                position relative
                overflow hidden
                .movie-cover
                    float left
                    width 2.854rem
                    border 1px solid #f0f2f3
                    position relative
                    .img
                        width 100%
                    &:after
                        content ''
                        display block
                        width 1.6rem
                        height 1.6rem
                        background-image url(./images/bofang.png)
                        background-size 100% auto
                        position absolute
                        left 50%
                        top 50%
                        transform translate(-50%,-50%)
                        opacity 0.7
                .movie-content
                    overflow hidden
                    padding-left 0.4rem
                    .movie-name
                        font-size 17px
                        margin 0.08rem 0
                    .movie-ename
                        font-size 12px
                        margin-bottom 0.3rem
                    .movie-score
                        font-size 12px
                        margin-bottom 0.3rem
                        .rating
                            .img
                                width 0.48rem
                                height 0.48rem
                                margin-right 2px
                            .rating-score
                                font-size 0.48rem
                                color #ffc600
                    .movie-detail
                        font-size 12px
                        margin-bottom 0.16rem
                        opacity 0.7
                        div,p
                            margin-bottom 0.14rem
            .operating
                margin-top .5rem
                div
                    border 1px solid rgba(255,255,255,0.4)
                    background-color rgba(255,255,255,0.4)
                    font-size 14px
                    color #fff
                    position relative
                    z-index 2
                    text-align center
                    padding: .25rem 0
                    border-radius 4px
                img
                    vertical-align middle
                span
                    vertical-align middle
            .movie-watch
                margin-right .3rem
                img
                    width 14px
                    height 14px
            .movie-mark
                img
                    width 18px
                    height 18px

    .section-seperate
        padding-top 0.4rem
        margin-bottom 0.3rem
        border-top 1px solid $bg_color
    .section-expender
        padding-left 0.4rem
        padding-right 0.4rem
        .text-expander
            &__content.close
                min-height 65px
                display -webkit-box
                overflow hidden
                text-overflow ellipsis
                
                -webkit-box-orient vertical
                -webkit-line-clamp 3
            &__button
                height 0.7em
                text-align center
                .icon-chevron__down
                    width 10px
                    height 10px
                    border 1px solid #aaa
                    display inline-block 
                    border-width 0 1px 1px 0
                    transform rotateZ(45deg)
                    box-sizing border-box
                    transition transform 0.5s
                .icon-chevron__down.up
                    transform rotateZ(-135deg)

    .section-seperate
        .movie-celebrities
            width 100%
            padding 0.3rem 0.3rem 0.3rem 0.1rem
            overflow-x scroll
            white-space nowrap
            box-sizing border-box
            li 
                text-align center
                display inline-block
                padding 0.04rem
                .link
                    color #000
                    .movie-celebrities__pic
                        width 1.7334rem
                        height 2.4rem
                        margin 0.05rem
                        img
                            width 100%
                    span
                        display block
                        font-size 0.2rem
                        text-overflow ellipsis
                        white-space nowrap
                        overflow hidden
                    .movie-celebrities-roles
                        color #999
        .talk-btn
            float right
            margin-top -0.75rem
            margin-right 0.5rem
        input.talk-btn
            background red 
            color white
            width 2rem
            height 0.8rem
            border none 0
            border-radius 1rem
            style none
        .talks-btn
            margin-top 0.5rem
            height 140px
            .talks
                float left
                text-align center
                vertical-align center
                padding 0.1rem 0.5rem 0.1rem
                margin-bottom 0.2rem
                margin-left 0.3rem
                height 0.6rem
                background none
                border 1px solid  #999
                border-radius 1rem    
        .section-til
            font-size 16px
            padding-left 0.4rem
        .chosen-comment
            .chosen-comment__item
                
                // display inline-block
                .item-avatal
                    position relative
                    padding-left 0.4rem
                    padding-top  0.4rem
                    height 40px
                    width 40px
                    overflow hidden
                    img
                        height 100%
                        width 100% 
                .item-detail
                    .item-detail__hd
                        padding-top 50px
                        position absolute
                        right 165px
                        bottom 2px
                        // translateY(-50px)
                        // top 0
                        .nick-name
                            font-size 14px
                            font-weight bold

                        
                            
                        
           

    .movie-booking
        padding-bottom 0.2rem
        .weui-flex
            text-align center
            .placeholder
                span 
                    font-style 24px
                    color #d96a3d
                p
                    color #bababa
                    margin-top 0.1rem
    .movie-photo
        .movie-photo__lists
            width 100%
            box-sizing border-box
            padding 0.3rem 0.3rem 0.2rem 0.3rem
            white-space nowrap
            overflow-x scroll
            .stage-img-container
                margin-right 0.13333rem
                display inline-block
                width 2.4rem
                height 1.867rem
                .movie-celebrities__pic
                    width 100%
                    height 100%
                    img 
                        width 100%
                        height 100%
                &:first-child
                    width 3.3334rem
                    height 1.867rem
                &:last-child
                    margin-right 0

        


#toast
    display none
.active
    display block !important
                
                
                        

                        
                    

